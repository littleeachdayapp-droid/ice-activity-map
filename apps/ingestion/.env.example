# Bluesky credentials (REQUIRED - search API requires authentication)
# BLUESKY_IDENTIFIER is your handle (e.g., yourname.bsky.social) or email
# BLUESKY_PASSWORD is your app password (create at: Settings > App Passwords)
BLUESKY_IDENTIFIER=
BLUESKY_PASSWORD=

# Polling configuration
POLL_INTERVAL_MS=60000

# Database
# Set ENABLE_DB=false to run without database persistence
ENABLE_DB=true
DATABASE_URL=postgresql://user:password@localhost:5432/ice_activity_map

# Geocoding (Nominatim requires a unique user agent)
NOMINATIM_USER_AGENT=ICEActivityMap/1.0 (your-email@example.com)
